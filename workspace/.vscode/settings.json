{
  "C_Cpp.autocomplete": "disabled",
  "C_Cpp.intelliSenseEngine": "disabled",
  "ROS2.rosSetupScript": "${workspaceFolder}/install/setup.bash",
  "[c]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "clangd.arguments": [
    "--compile-commands-dir=${workspaceFolder}/build",
    "--clang-tidy",
    "--background-index",
    "--query-driver=/usr/bin/g++,/usr/bin/clang++,/usr/bin/c++"
  ],
  "clangd.enableCodeCompletion": true,
  "clangd.path": "/usr/local/bin/clangd",
  "cmake.configureOnOpen": false,
  "cSpell.import": ["${workspaceFolder}/.cspell.json"],
  "cSpell.languageSettings": [
    {
      "languageId": "c,cpp,python",
      "allowCompoundWords": false
    }
  ],
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.rulers": [100],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "files.associations": {
    "*.repos": "yaml",
    "*.world": "xml",
    "*.xacro": "xml",
    "*.launch": "xml",
    "*.urdf": "xml",
    "*.rviz": "yaml"
  },
  "gitlens.advanced.repositorySearchDepth": 999,
  "python.analysis.extraPaths": [
    "/opt/ros/${env:ROS_DISTRO}/lib/python3.*/site-packages",
    "/opt/ros/${env:ROS_DISTRO}/local/lib/python3.*/dist-packages"
  ],
  "python.autoComplete.extraPaths": [
    "/opt/ros/${env:ROS_DISTRO}/lib/python3.*/site-packages",
    "/opt/ros/${env:ROS_DISTRO}/local/lib/python3.*/dist-packages"
  ],
  "python.defaultInterpreterPath": "/usr/bin/python3",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/build": true,
    "**/install": true,
    "**/log": true,
    "**/.git": true
  },
  "files.watcherExclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/build": true,
    "**/install": true,
    "**/log": true,
    "**/.git": true
  },
  "yaml.schemas": {}
}
